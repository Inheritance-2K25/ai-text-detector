{
  "manifest_version": 3,
  "name": "Text Insight AI",
  "version": "1.0",
  "description": "Analyze text anywhere",
  "permissions": ["activeTab", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
